<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTitleLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
    </style>

    <!-- Calendar Fragment styles -->
    <style name="week_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dividers</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="timer_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">15</item>
    </style>

    <style name="vertical_divider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividers</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dividers</item>
    </style>

    <!-- Timer placeholder -->
    <style name="timer_placeholder_1">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dividers</item>
    </style>
    <style name="timer_placeholder_2">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dividers</item>
    </style>


    <!-- Timer info card -->
    <style name="timer_title_text">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="timer_time_text">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="timer_days_text">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/dividers</item>
    </style>

    <!-- Create timer styles -->
    <style name="create_timer_divider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:background">@color/dividers</item>
    </style>

    <style name="create_timer_vdivider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividers</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
