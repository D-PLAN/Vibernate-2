<resources xmlns="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteTitleLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:theme">@style/ToolbarDarkOverflow</item>
    </style>

    <style name="ToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>
        <item name="android:actionMenuTextColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
    </style>

    <!-- Calendar Fragment styles -->
    <style name="WeekText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimerContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">15</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dividers</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dividers</item>
    </style>

    <!-- Timer placeholder -->
    <style name="TimerPlaceholderTop">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dividers</item>
    </style>
    <style name="TimerPlaceholderBottom">
        <item name="android:fontFamily">san-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dividers</item>
    </style>


    <!-- Timer info card -->
    <style name="TimerTitleText">
        <item name="android:fontFamily">san-serif-medium</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="TimerTimeText">
        <item name="android:fontFamily">san-serif-regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TimerDaysText">
        <item name="android:fontFamily">san-serif-light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_grey_text</item>
    </style>

    <!-- Create timer styles -->
    <style name="CreateTimerDivider">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
        <item name="android:background">@color/dividers</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:background">@drawable/rounded_corner_text</item>
    </style>

</resources>
