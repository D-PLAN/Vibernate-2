<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialImageView"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:text="@string/tutorial_instruction_7_2"
            android:id="@+id/tutorial_finish" android:layout_below="@+id/tutorialImageView"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerHorizontal="true" android:layout_marginTop="10dp"/>

</RelativeLayout>