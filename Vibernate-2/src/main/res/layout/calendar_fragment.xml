<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Weekdays -->
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent" 	
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:padding="5dp"
                  android:background="@color/white">

        <TextView android:text="@string/day_sun" style="@style/week_text"/>
        <TextView android:text="@string/day_mon" style="@style/week_text"/>
        <TextView android:text="@string/day_tues" style="@style/week_text"/>
        <TextView android:text="@string/day_wed" style="@style/week_text"/>
        <TextView android:text="@string/day_thurs" style="@style/week_text"/>
        <TextView android:text="@string/day_fri" style="@style/week_text"/>
        <TextView android:text="@string/day_sat" style="@style/week_text"/>

    </LinearLayout>

    <!-- Timers -->
    <RelativeLayout android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="5"
          android:paddingLeft="15px"
          android:paddingRight="15px"
          android:background="@color/background">
        <com.napontaratan.vibernate.view.TimerWeekView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>


    <!-- Individual timer info -->
    <android.support.v7.widget.CardView android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="2.5"
                                        android:background="@color/white">

        <LinearLayout android:id="@+id/timer_info_layout"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="30px"
                      android:visibility="gone">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                <TextView android:id="@+id/timer_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/timer_title_text"/>
                <ImageView android:id="@+id/timer_type_icon"
                           android:layout_height="80px"
                           android:layout_width="wrap_content"
                           android:layout_toRightOf="@+id/timer_name"/>
                <ImageView android:id="@+id/timer_delete_icon"
                           android:layout_height="80px"
                           android:layout_width="wrap_content"
                           android:layout_toRightOf="@+id/timer_type_icon"
                           android:src="@drawable/ic_action_discard"/>
                <Switch android:id="@+id/timer_switch"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                <ImageView android:id="@+id/timer_image_view"
                           android:layout_height="wrap_content"
                           android:layout_width="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:src="@drawable/ic_action_alarms"/>
                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/timer_image_view">
                    <TextView android:id="@+id/timer_start_time"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/timer_time_text"/>
                    <TextView android:id="@+id/timer_hyphen"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/timer_start_time"
                              android:text=" - "
                              style="@style/timer_time_text"/>
                    <TextView android:id="@+id/timer_end_time"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/timer_hyphen"
                              style="@style/timer_time_text"/>
                    <TextView android:id="@+id/timer_days"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/timer_start_time"
                              style="@style/timer_days_text"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout android:id="@+id/timer_placeholder"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:padding="20px"
                        android:clickable="false">
            <TextView android:id="@+id/timer_placeholder_1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:text="@string/timer_hint_1"
                      style="@style/timer_placeholder_1"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/timer_placeholder_1"
                      android:padding="5dp"
                      android:text="@string/timer_hint_2"
                      style="@style/timer_placeholder_2"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>