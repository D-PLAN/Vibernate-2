<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:minHeight="55dp"
             android:background="@color/colorPrimary"
             android:theme="@style/WhiteTitleLightTheme"
             android:contentInsetStart="0dp"
             android:elevation="1dp">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"/>
    <ImageButton
            android:id="@+id/add_button"
            android:layout_width="@dimen/diameter"
            android:layout_height="@dimen/diameter"
            android:layout_gravity="end|bottom"
            android:src="@android:drawable/ic_input_add"
            android:tint="@android:color/white"
            android:background="@drawable/oval_ripple"
            android:elevation="@dimen/elevation_low"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="30dp"
            android:stateListAnimator="@anim/float_button_anim"
            android:visibility="gone"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/floating_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:textColor="@color/black"
            android:elevation="@dimen/elevation_low"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:stateListAnimator="@anim/float_button_anim"
            fab:fab_addButtonColorNormal="@color/colorAccent"
            fab:fab_addButtonColorPressed="@color/colorAccentDark"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_colorNormal="@color/white"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/onetime_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorAccent"
                fab:fab_title="@string/create_onetime_timer"
                fab:fab_icon="@drawable/ic_onetime_timer"
                fab:fab_colorPressed="@color/colorAccentDark"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/recurring_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorAccent"
                fab:fab_title="@string/create_recurring_timer"
                fab:fab_icon="@drawable/ic_recurring_timer"
                fab:fab_colorPressed="@color/colorAccentDark"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
