<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical" >

    <!-- Toolbar at the top -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/create_timer_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:contentInsetStart="0dp"
        android:elevation="1dp"
        android:minHeight="56dp" >
    </android.support.v7.widget.Toolbar>
    <!-- End of Toolbar code -->


    <!-- Enter Timer Name + Vibrate/Silent ToggleButtons -->

    <EditText
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:height="50dp"
        android:hint="Please enter a name"
        android:lines="1"
        android:maxLines="1"
        android:textSize="14dp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        android:background="@color/white">

        <ToggleButton
            android:id="@+id/create_timer_type_vibrate"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:textOn="Vibrate"
            android:textOff="Vibrate"
            android:textColor="@color/toggle_color"
            android:textColorHighlight="@color/colorAccent"
            android:layout_weight="1"/>

        <ToggleButton
            android:id="@+id/create_timer_type_silent"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:layout_weight="1"
            android:textColor="@color/toggle_color"
            android:textOn="Silent"
            android:textOff="Silent"
            android:textColorHighlight="@color/colorAccent"/>

    </LinearLayout>

    <!-- End of Timer Name + Vibrate/Silent ToggleButtons -->


    <!-- Container with Start Time to End Time Set + Display -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="		Start Time"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="																																End Time"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TimePicker
                android:id="@+id/timePicker1"
                android:layout_width="130dp"
                android:layout_height="250dp"
                />

            <TimePicker
                android:id="@+id/timePicker2"
                android:layout_width="130dp"
                android:layout_height="250dp"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- End of Container with Start Time to End Time Set + Display -->


    <!-- Container for Weekday/Weekend Headings -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="6"
        android:text="Choose Which Days"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekdays" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekends" />
    </LinearLayout>

    <!-- End of Container for Weekday/Weekend Headings -->


    <!-- Container for Days of the Week ToggleButtons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleButton7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />
    </LinearLayout>

    <!-- End of Container for Days of the Week ToggleButtons -->

</LinearLayout>