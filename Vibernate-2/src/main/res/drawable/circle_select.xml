<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/circle_btn_selected"
          android:state_checked="true" />
    <!-- When not selected, use background -->
    <item android:drawable="@drawable/circle_btn"
          android:state_checked="false"/>

    <item android:state_pressed="true" android:drawable="@drawable/circle_btn_pressed" android:state_checked="false"/>
</selector>